# =============================================
# CONFIGURATION GLOBALE IMO-OPS
# =============================================

# Evite les warnings
AIRFLOW_UID=50000
retry_count=3
max_retries=5


# Environment
ENV=development
PROJECT_NAME=imo-ops
DOMAIN=localhost
COMPOSE_PROJECT_NAME=imo-ops

# Docker Configuration
DOCKER_BUILDKIT=1
COMPOSE_DOCKER_CLI_BUILD=1
DOCKER_NETWORK_NAME=imo-ops-network

# PostgreSQL Global (valeurs par défaut - seront écrasées par les .env spécifiques)
POSTGRES_VERSION=13
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=postgres

# Redis (valeur par défaut)
REDIS_PASSWORD=redis_password

# MongoDB (valeurs par défaut)
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=password
MONGO_DATABASE=imo_db
MONGO_PORT=27017

# Grafana (valeurs par défaut)
GRAFANA_USER=admin
GRAFANA_PASSWORD=password

# Paths
DATA_DIR=./data
LOGS_DIR=./logs
BACKUP_DIR=./backups

# Security (à changer en production)
FERNET_KEY=your_fernet_key_here_change_in_production
SECRET_KEY=your_secret_key_here_change_in_production

# =============================================
# DÉVELOPPEMENT
# =============================================
DEBUG=true
LOG_LEVEL=INFO

# Variables manquantes identifiées
AIRFLOW_UID=50000
retry_count=3
max_retries=5

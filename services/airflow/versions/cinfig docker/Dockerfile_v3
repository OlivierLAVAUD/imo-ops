# Utilisation de l'image de base officielle Apache Airflow avec la version 2.7.3
FROM apache/airflow:2.7.3

# Définir le répertoire de travail
WORKDIR /opt/airflow

# Installation des dépendances système
USER root
RUN apt-get update && \
    apt-get install -y --no-install-recommends \
        gcc \
        python3-dev \
        libpq-dev \
        curl \
        postgresql-client \
        && apt-get clean \
        && rm -rf /var/lib/apt/lists/*

# Copier et configurer les scripts avec les permissions d'exécution
COPY ./scripts /opt/airflow/scripts
RUN chmod +x /opt/airflow/scripts/*.sh && \
    chown -R airflow:root /opt/airflow/scripts

# Retour à l'utilisateur airflow
USER airflow

# CORRECTION : Installer d'abord les dépendances critiques
RUN pip install --no-cache-dir --upgrade pip

# CORRECTION : Installer psycopg2-binary en premier
RUN pip install --no-cache-dir \
    psycopg2-binary==2.9.6

# CORRECTION : Copier requirements.txt AVANT l'installation
COPY requirements.txt /opt/airflow/

# CORRECTION : Installer les requirements avec l'option --no-deps pour éviter les conflits
RUN if [ -f "/opt/airflow/requirements.txt" ]; then \
        pip install --no-cache-dir --no-deps -r /opt/airflow/requirements.txt; \
    fi

# CORRECTION : Installer les providers APRÈS les requirements principaux
RUN pip install --no-cache-dir \
    apache-airflow-providers-postgres==5.0.0 \
    apache-airflow-providers-celery==3.3.0 \
    apache-airflow-providers-redis==3.0.0

# Installation optionnelle de flask-session
RUN pip install --no-cache-dir flask-session==0.4.0

# Copier les fichiers nécessaires
COPY ./dags /opt/airflow/dags
COPY ./config /opt/airflow/config
COPY ./plugins /opt/airflow/plugins
COPY ./sql /opt/airflow/sql

# Définir une valeur par défaut pour la variable
ENV _PIP_ADDITIONAL_REQUIREMENTS=${_PIP_ADDITIONAL_REQUIREMENTS:-}

# Installation des dépendances supplémentaires
RUN if [ -n "${_PIP_ADDITIONAL_REQUIREMENTS}" ]; then \
        pip install --no-cache-dir ${_PIP_ADDITIONAL_REQUIREMENTS}; \
    fi

# Copier le script de test
COPY test_postgres.py /opt/airflow/

# Exposer le port
EXPOSE 8080

# Commande par défaut
ENTRYPOINT ["bash", "/entrypoint"]
CMD ["airflow", "webserver"]
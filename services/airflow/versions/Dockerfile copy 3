# Utilisation de l'image de base officielle Apache Airflow
FROM apache/airflow:2.10.5

# Définir le répertoire de travail
WORKDIR /opt/airflow

# Installation des dépendances système
USER root
RUN apt-get update && \
    apt-get install -y --no-install-recommends \
        gcc \
        python3-dev \
        libpq-dev \
        && apt-get clean \
        && rm -rf /var/lib/apt/lists/*

USER airflow

# Installation des providers avec des versions compatibles
RUN pip install --no-cache-dir \
    apache-airflow-providers-postgres==5.8.0 \
    apache-airflow-providers-redis==3.4.1 \
    apache-airflow-providers-celery==3.3.1 \
    psycopg2-binary==2.9.7

# Alternative : si les versions ci-dessus ne fonctionnent pas, essayez :
# RUN pip install --no-cache-dir \
#     apache-airflow-providers-postgres \
#     apache-airflow-providers-redis \
#     apache-airflow-providers-celery \
#     psycopg2-binary

# Copier les fichiers nécessaires
COPY ./dags /opt/airflow/dags
COPY ./config /opt/airflow/config
COPY ./plugins /opt/airflow/plugins

# Définir une valeur par défaut pour la variable
ENV _PIP_ADDITIONAL_REQUIREMENTS=${_PIP_ADDITIONAL_REQUIREMENTS:-}

# Installation des dépendances supplémentaires
RUN if [ -n "${_PIP_ADDITIONAL_REQUIREMENTS}" ]; then pip install --no-cache-dir ${_PIP_ADDITIONAL_REQUIREMENTS}; fi

# Exposer le port
EXPOSE 8080

# Commande par défaut
ENTRYPOINT ["bash", "/entrypoint"]
CMD ["airflow", "webserver"]
FROM python:3.11-slim

# Installer les dépendances système nécessaires pour Playwright
RUN apt-get update && apt-get install -y \
    wget \
    gnupg \
    libnss3 \
    libnspr4 \
    libatk1.0-0 \
    libatk-bridge2.0-0 \
    libcups2 \
    libdrm2 \
    libdbus-1-3 \
    libxcb1 \
    libxkbcommon0 \
    libx11-6 \
    libxcomposite1 \
    libxdamage1 \
    libxext6 \
    libxfixes3 \
    libxrandr2 \
    libgbm1 \
    libpango-1.0-0 \
    libcairo2 \
    libasound2 \
    && rm -rf /var/lib/apt/lists/*

# Installer UV
RUN pip install uv

WORKDIR /app

# Créer un répertoire de cache pour UV
ENV UV_CACHE_DIR=/root/.cache/uv
RUN mkdir -p ${UV_CACHE_DIR}

# Copier les fichiers de configuration
COPY requirements.txt .
COPY config.json .

# Installer les dépendances Python avec UV et cache
RUN --mount=type=cache,target=${UV_CACHE_DIR} \
    uv pip install --system --cache-dir ${UV_CACHE_DIR} -r requirements.txt

# Installer Playwright et les browsers
RUN playwright install chromium
RUN playwright install-deps

# Copier le code source
COPY iad_scraper.py .

# Créer les répertoires nécessaires
RUN mkdir -p /app/results /app/logs

ENV PYTHONUNBUFFERED=1
ENV PYTHONPATH=/app

CMD ["sh", "-c", "python iad_scraper.py --localisation \"${LOCALISATION:-Montpellier}\" --max-biens \"${MAX_BIENS:-100}\" --max-pages \"${MAX_PAGES:-20}\" && tail -f /dev/null"]